# Firebase Admin SDK
FIREBASE_SERVICE_ACCOUNT_PATH=config/serviceAccountKey.json
# OR use individual credentials:
# FIREBASE_PROJECT_ID=your_project_id
# FIREBASE_PRIVATE_KEY_ID=your_private_key_id
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project_id.iam.gserviceaccount.com
# FIREBASE_CLIENT_ID=your_client_id

# Google Gemini 3 API
GEMINI_API_KEY=your_gemini_api_key_here

# Application Configuration
ENVIRONMENT=development
PORT=8000
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com

# ============================================
# REQUIRED: Real APIs (provided by user)
# ============================================

# Mappls API (MapmyIndia) - REQUIRED for routing and places
MAPPLS_CLIENT_ID=your_mappls_client_id
MAPPLS_CLIENT_SECRET=your_mappls_client_secret
MAPPLS_API_KEY=your_mappls_api_key

# BMTC/BMRCL GTFS - Public APIs (no auth needed, but can configure endpoints)
BMTC_GTFS_URL=https://iudx.org.in/bmtc
BMRCL_GTFS_URL=https://opendata.bengaluru.gov.in/bmrcl

# ============================================
# MOCK MODE (for Razorpay and ONDC only)
# ============================================
# These services use mock implementations for rapid development
# Set to false when you have real API credentials

USE_MOCK_RAZORPAY=true
USE_MOCK_ONDC=true

# ==== OPTIONAL: Real API Keys (when USE_MOCK_*=false) ====

# ONDC Configuration (complex onboarding - use mock for MVP)
# ONDC_SUBSCRIBER_ID=your_ondc_subscriber_id
# ONDC_SUBSCRIBER_URL=your_ondc_subscriber_url
# ONDC_SIGNING_PRIVATE_KEY=your_ondc_private_key
# ONDC_REGISTRY_URL=https://registry.ondc.org/ondc

# Razorpay (can enable later for real payments)
# RAZORPAY_KEY_ID=your_razorpay_key_id
# RAZORPAY_KEY_SECRET=your_razorpay_key_secret
